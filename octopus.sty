\newcommand{\mapdef}[4]{
  \renewcommand{\arraystretch}{0.8} % 間隔を狭める
  \hspace{-5pt}
  \begin{array}{c@{\:}c@{\:}c}
    #1   & \longrightarrow & #2   \\
    \vin &                 & \vin \\
    #3   & \longmapsto     & #4
  \end{array}
  \renewcommand{\arraystretch}{1.3} % デフォルトの幅に戻している
}

%% \midwayarrow[線色（未指定の場合は黒）]{(1点目の座標)}{(2点目の座標)} で (1点目) ->- (2点目）
\newcommand{\midwayarrow}[3][black]{
	\draw[-latex,#1] #2 -- ($#2!0.6!#3$);
	\draw[#1] ($#2!0.41!#3$) -- #3;
}

%% \point{(点の座標)}{文字の位置}{文字内容}
\newcommand{\point}[3]{
